<Page x:Class="Shveynaya.Pages.Customer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shveynaya.Pages"
        xmlns:controls="clr-namespace:Shveynaya.Controls"
        mc:Ignorable="d"
        d:DesignHeight="490" d:DesignWidth="800"
        Title="Customer">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height=".15*"/>
            <RowDefinition Height=".8*"/>
        </Grid.RowDefinitions>
        <controls:UcHeader Grid.Row="0" x:Name="HePageName" PageName="Меню заказчика"/>
        <TabControl Grid.Row="1">
            <TabItem Header="Мои заказы">
                <Frame Name="FrCustomerOrderMenu" NavigationUIVisibility="Hidden"/>
            </TabItem>
        </TabControl>
    </Grid>
</Page>
